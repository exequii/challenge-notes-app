{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    //esto lo pasamos a false para que no joda en la parte de cypress
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "cypress"],
  //en ese include le digo que debe ignorar tyscript para poder ver bien los archivos de cypress
  "references": [{ "path": "./tsconfig.node.json" }]
}
